{
  "data": {
    "train_path": "example_movie_review_data.json",
    "description": "豆瓣影评数据集"
  },
  "model": {
    "path": "/mnt/data2/zhangshaolei/LLM/Qwen/Qwen2.5-3B-Instruct",
    "checkpoint_dir": "outputs"
  },
  "training": {
    "max_length": 4096,
    "batch_size": 2,
    "eval_batch_size": 2,
    "gradient_accumulation_steps": 8,
    "learning_rate": 1e-5,
    "weight_decay": 0.01,
    "warmup_steps": 100,
    "logging_steps": 10,
    "save_steps": 500,
    "save_total_limit": 3
  },
  "ablation_configs": {
    "profile_and_history": {
      "name": "profile_and_history",
      "use_profile": true,
      "use_history": true,
      "description": "使用用户profile和历史影评"
    },
    "profile_only": {
      "name": "profile_only",
      "use_profile": true,
      "use_history": false,
      "description": "仅使用用户profile"
    },
    "history_only": {
      "name": "history_only",
      "use_profile": false,
      "use_history": true,
      "description": "仅使用历史影评"
    },
    "baseline": {
      "name": "baseline",
      "use_profile": false,
      "use_history": false,
      "description": "基线模型（无上下文）"
    }
  },
  "data_split": {
    "train_ratio": 0.7,
    "val_ratio": 0.15,
    "test_ratio": 0.15
  }
}
